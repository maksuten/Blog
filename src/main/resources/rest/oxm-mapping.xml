<mapping>

       <class name="pl.upir.learn8.entity.BlgUsersS">
              <field name="blgUsersList" type="pl.upir.learn8.entity.BlgUsers" collection="arraylist" >
                     <bind-xml name="blgUsers"/>
              </field>
       </class>


       <class name="pl.upir.learn8.entity.BlgUsers" identity="usrId">

              <map-to xml="blgUsers" />

              <field name="usrId" type="integer">
                     <bind-xml name="usrId" node="element"/>
              </field>
              <field name="usrLogin" type="string">
                     <bind-xml name="usrLogin" node="element" />
              </field>
              <field name="usrPassword" type="string">
                     <bind-xml name="usrPassword" node="element" />
              </field>
              <field name="usrDateTimeChange" type="timestamp" />
                     <bind-xml name="usrDateTimeChange" node="element" />
       </class>

      <!-- <field-handler name="dateHandler" class="pl.upir.learn8.xml.hadler.DateTimeHandler">
              <param name="date-format" value="yyyy-MM-dd"/>
       </field-handler>-->
</mapping>